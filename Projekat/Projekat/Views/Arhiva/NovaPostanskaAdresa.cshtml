@model Projekat.ViewModels.PostanskeAdreseViewModel
@{
    ViewBag.Title = "NovaPostanskaAdresa";
}

<h2>Nova Postanska Adresa</h2>

@using (Html.BeginForm("SacuvajNovuPostanskuAdresu", "Arhiva"))
{

    <div class="form-group">
        @Html.LabelFor(a => Model.PostanskeAdrese[0].Adresa):
        @Html.DropDownListFor(a => Model.PostanskeAdrese[0].OznakaPostanskeAdrese.Id, new SelectList(Model.OznakePostanskeAdrese, "Id", "Oznaka"), "Oznaka", new { @class = "form-control" })
        @Html.TextBoxFor(a => Model.PostanskeAdrese[0].Adresa, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => Model.PostanskeAdrese[0].Adresa)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => Model.PostanskeAdrese[0].PostanskiBroj)
        @Html.TextBoxFor(a => Model.PostanskeAdrese[0].PostanskiBroj, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => Model.PostanskeAdrese[0].Grad)
        @Html.TextBoxFor(a => Model.PostanskeAdrese[0].Grad, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(a => Model.PostanskeAdrese[0].Id)


    <button type="submit" class="btn btn-primary" style="margin-bottom: 15px">
        Sačuvaj
    </button>

}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


