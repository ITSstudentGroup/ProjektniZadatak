@model Projekat.ViewModels.KorisnikIzmenaNoviViewModel
@{
    ViewBag.Title = "Korisnik";
}

<h2>Korisnik</h2>


@using (Html.BeginForm("SacuvajKorisnika", "Admin"))
{
    @Html.ValidationSummary()
    
    
        
    <h3>@Model.Korisnik.UsernameEmail</h3>
        
    
    <div class="form-group">
        @Html.LabelFor(a => a.Korisnik.Password)
        @Html.PasswordFor(a => a.Korisnik.Password, new {@class = "form-control" })
        @Html.ValidationMessageFor(a => a.Korisnik.Password)
    </div>
    

    <div class="form-group">
        @Html.LabelFor(a => a.Korisnik.UlogaId)
        @Html.DropDownListFor(a => a.Korisnik.UlogaId, new SelectList(Model.SveUloge, "Id", "Ime"), "Uloga", new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Korisnik.UlogaId)
    </div>

   
    @Html.HiddenFor(a => a.Korisnik.Id)
    @Html.HiddenFor(a => a.Korisnik.UsernameEmail)
    <button type="submit" class="btn btn-primary">
        Sačuvaj
    </button>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


